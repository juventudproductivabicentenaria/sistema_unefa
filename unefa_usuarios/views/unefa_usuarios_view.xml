<!--
    vista form y tree para el registro de estudiantes
-->
    
            <record id="view_users_form_estudiante_unefa" model="ir.ui.view">
                    <field name="name">view_users_form_estudiante_unefa_form</field>
                    <field name="model">unefa.usuario_estudiante</field>
                    <field name="arch" type="xml">
                        <form string="Estudiantes UNEFA">
                            <header>
                                <button name="crear_ficha_estudiante" string="Ficha Estudiante"  type="object" class="oe_highlight" groups="base.group_system,unefa_configuracion.group_unefa_coordinador"/>
                                <button name="descargar_historial_notas" string="Historial de notas"  type="object" class="oe_highlight" groups="base.group_system,unefa_configuracion.group_unefa_coordinador,unefa_configuracion.group_unefa_estudiantes"/>
                            </header>
                            <sheet>
                                <header>
                                    <h2 style="color:#7C7BAD"><center>Estudiante</center></h2>
                                </header><br/>
                                <field name="id" invisible="1"/>
                                <div class="oe_right oe_button_box">
                                    <button string="Cambiar Contraseña" type="action" name="%(base.change_password_wizard_action)d"
                                        class="oe_link" help="Cambiar Contraseña."/>
                                    <br/>
                                    <br/>
                                        <label for="fecha_ingreso" class="oe_edit_only"/>
                                        <field name="fecha_ingreso" />
                                </div>
                                <field name="image" widget='image' class="oe_avatar oe_left" options='{"preview_image": "image_medium"}'/>
                                <div class="oe_title">
                                    <div>
                                    <div class="col-md-6">
                                        <label for="name" string="Primer Nombre" class="oe_edit_only" style="width: 25%%"/>
                                        <h1><field name="name" style="width: 100%%"/></h1>
                                        <label for="primer_apellido" class="oe_edit_only" style="width: 25%%"/>
                                        <h1><field name="primer_apellido" style="width: 100%%"/></h1>
                                    </div>
                                    <div class="col-md-6">
                                        <label for="segundo_nombre" class="oe_edit_only" style="width: 25%%"/>
                                        <h1><field name="segundo_nombre" style="width: 100%%"/></h1>
                                        <label for="segundo_apellido" class="oe_edit_only" style="width: 25%%"/>
                                        <h1><field name="segundo_apellido" style="width: 100%%"/></h1>
                                    </div>
                                    </div>
                                    <field name="email" invisible="1"/>
                                    <label for="login" class="oe_edit_only" string="Correo Electrónico" placeholder="nombre@email.com"/>
                                    <h2><field name="login" string="Correo Electrónico"  placeholder="nombre@email.com" on_change="on_change_login(login)"/></h2>
                                    <group>
                                        <field name="active" string="Activo"/>
                                        <field name="is_comandante_curso" />
                                    </group>
                                </div>
                                <notebook colspan="4">
                                    <page string="Datos Personales">
                                        <group colspan="4" col="4" String="Datos Personales">
                                            <field name="cedula" data-inputmask="'mask': '99999999'"/>
                                            <field name="nacionalidad"/>
                                            <field name="estado_civil"/>
                                            <field name="fecha_nacimiento" on_change="validar_fecha_nacimiento(fecha_nacimiento)"/>
                                            <field name="sexo"/>
                                            <field name="condicion"/>
                                            <field name="fuerza_id" on_change="cp_limpiar_campos('grado_id')" attrs="{'invisible': [('condicion','!=','militar')],'required': [('condicion','=','militar')]}" widget="selection" />
                                            <field name="grado_id" attrs="{'invisible': [('condicion','!=','militar')],'required': [('condicion','=','militar')]}" domain="[('fuerza_id','in',fuerza_id)]" widget="selection"/>
                                            <field name="telefono" placeholder="Por ejemplo 0212-1234567" data-inputmask="'mask': '9999-9999999'"/>
                                            <field name="telefono_local" placeholder="Por ejemplo 0212-1234567" data-inputmask="'mask': '9999-9999999'"/>
                                            
                                        </group>
                                        <group col="4">
                                            <group String="Datos Académicos">
                                                <field name="carrera_id" on_change="filtrar_carreras_regimen()" widget="selection" readonly="True"/>
                                                <field name="regimen"  readonly="True"/>
                                                <field name="pensum_id" widget="selection" domain="[('state','=','activo')]"/>
                                            </group>
                                            <group String="Dirección de Habitación">
                                                <field name="estado_id" on_change="cp_limpiar_campos('municipio_id')" widget="selection"/>
                                                <field name="municipio_id" on_change="cp_limpiar_campos('parroquia_id')" domain="[('estado_id','=',[estado_id])]" widget="selection"/>
                                                <field name="parroquia_id" domain="[('municipio_id','=',[municipio_id])]" widget="selection"/>
                                                <field name="sector"/>
                                                <field name="calle_avenida"/>
                                                <field name="casa_apto"/>
                                            </group>
                                        </group>
                                    </page>
                                    <page string="Permisos de Acceso">
                                        <group col="4">
                                            <field name="groups_id" string="Grupos" options="{'no_create':True}" on_change="rol_usuario_default('Estudiante')" domain="[('name','=','Estudiantes')]"/>
                                        </group>
                                    </page>
                                </notebook>
                            </sheet>
                        </form>
                    </field>
                </record>
                
